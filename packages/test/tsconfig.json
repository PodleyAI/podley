{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "files": ["src/index.ts"],
  "exclude": ["**/*.test.ts", "dist"],
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "#/*": ["./src/*"],
      "@ellmers/task-graph": ["../task-graph/src"],
      "@ellmers/ai": ["../ai/src"],
      "@ellmers/ai-provider": ["../ai-provider/src"],
      "@ellmers/storage": ["../storage/src"],
      "@ellmers/job-queue": ["../job-queue/src"],
      "@ellmers/tasks": ["../tasks/src"]
    }
  },
  "references": [
    { "path": "../task-graph" },
    { "path": "../ai" },
    { "path": "../ai-provider" },
    { "path": "../storage" },
    { "path": "../job-queue" },
    { "path": "../tasks" }
  ]
}
