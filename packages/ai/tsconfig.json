{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "files": ["src/index.ts"],
  "exclude": ["**/*.test.ts", "dist"],
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "#/*": ["./src/*"],
      "@ellmers/task-graph": ["../task-graph/src"],
      "@ellmers/job-queue": ["../job-queue/src"]
