{
  "name": "@podley/tasks",
  "type": "module",
  "version": "0.0.30",
  "description": "Pre-built task implementations for Podley, including common AI operations and utility functions.",
  "scripts": {
    "watch": "concurrently -c 'auto' 'bun:watch-*'",
    "watch-code": "bun build --watch --no-clear-screen --target=browser --sourcemap=external --packages=external --outdir ./dist ./src/index.ts",
    "watch-types": "tsc --watch --preserveWatchOutput",
    "build-package": "bun run build-clean && bun run build-code",
    "build-clean": "rm -fr dist/*",
    "build-code": "bun build --target=browser --sourcemap=external --packages=external --outdir ./dist ./src/index.ts",
    "build-types": "rm -f tsconfig.tsbuildinfo && tsc",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "bun test",
    "prepare": "node -e \"const pkg=require('./package.json');pkg.exports['.'].bun='./dist/index.js';pkg.exports['.'].types='./dist/index.d.ts';require('fs').writeFileSync('package.json',JSON.stringify(pkg,null,2))\""
  },
  "exports": {
    ".": {
      "bun": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src/**/*.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@podley/task-graph": "workspace:*",
    "@podley/util": "workspace:*",
    "@podley/job-queue": "workspace:*",
    "@podley/storage": "workspace:*",
    "zod": "catalog:"
  },
  "peerDependenciesMeta": {
    "@podley/task-graph": {
      "optional": false
    },
    "@podley/util": {
      "optional": false
    },
    "@podley/job-queue": {
      "optional": false
    },
    "@podley/storage": {
      "optional": false
    },
    "zod": {
      "optional": false
    }
  },
  "devDependencies": {
    "@podley/task-graph": "workspace:*",
    "@podley/util": "workspace:*",
    "@podley/job-queue": "workspace:*",
    "@podley/storage": "workspace:*",
    "zod": "catalog:"
  }
}