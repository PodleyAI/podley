{
  "name": "@ellmers/cli",
  "type": "module",
  "version": "0.0.1",
  "description": "Ellmers is a tool for building and running DAG pipelines of AI tasks.",
  "scripts": {
    "watch": "concurrently -c 'auto' -n 'cli:' 'bun:watch-*'",
    "watch-js": "bun build --watch --target=node --sourcemap=external --packages=external --outdir ./dist ./src/ellmers.ts",
    "watch-lib": "bun build --watch --target=node --sourcemap=external --packages=external --outdir ./dist ./src/lib.ts",
    "watch-types": "tsc --watch --preserveWatchOutput",
    "build-example": "bun run build-clean && bun run build-js && bun run build-js-worker && bun run build-js-worker-hft && bun run build-lib",
    "build-clean": "rm -fr dist/* tsconfig.tsbuildinfo",
    "build-js": "bun build --target=bun --packages=external --outdir ./dist ./src/ellmers.ts",
    "build-js-worker": "bun build --target=node --outdir ./dist ./src/ellmers_worker.ts",
    "build-js-worker-hft": "bun build --target=node --outdir ./dist ./src/worker_hft.ts",
    "build-lib": "bun build --target=bun --packages=external --outdir ./dist ./src/lib.ts",
    "build-types": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": "./src/ellmers.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    }
  },
  "dependencies": {
    "@ellmers/ai": "workspace:*",
    "@ellmers/ai-provider": "workspace:*",
    "@ellmers/storage": "workspace:*",
    "@ellmers/task-graph": "workspace:*",
    "@ellmers/tasks": "workspace:*",
    "@ellmers/test": "workspace:*",
    "@ellmers/util": "workspace:*",
    "@mediapipe/tasks-text": "^0.10.21",
    "@sroussey/transformers": "3.4.0-2",
    "@types/react": "=18.3.12",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "is-unicode-supported": "^2.1.0",
    "react": "=18.3.1",
    "react-reconciler": "^0.31.0",
    "react-devtools-core": "^4.19.1",
    "tuir": "^1.1.3"
  }
}
