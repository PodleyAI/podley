{
  "name": "@podley/web",
  "version": "0.0.43",
  "type": "module",
  "description": "Web interface example for Podley, showcasing a React-based UI for building and visualizing AI task pipelines.",
  "scripts": {
    "dev": "concurrently --kill-others -c 'auto' -n app,types 'bunx --bun vite --port 3800' 'tsc -w --noEmit --preserveWatchOutput'",
    "build-example": "bun run build-clean && concurrently -c 'auto' -n 'code,types' 'bun run build-code' 'bun run build-types'",
    "build-clean": "rm -fr dist/* tsconfig.tsbuildinfo",
    "build-code": "vite build",
    "build-types": "rm -f tsconfig.tsbuildinfo && tsc",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --port 3800"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.2",
    "@podley/ai": "workspace:*",
    "@podley/ai-provider": "workspace:*",
    "@podley/storage": "workspace:*",
    "@podley/job-queue": "workspace:*",
    "@podley/sqlite": "workspace:*",
    "@podley/task-graph": "workspace:*",
    "@podley/tasks": "workspace:*",
    "@podley/test": "workspace:*",
    "@podley/util": "workspace:*",
    "@mediapipe/tasks-text": "catalog:",
    "@radix-ui/react-icons": "^1.3.2",
    "@sroussey/transformers": "catalog:",
    "@uiw/codemirror-theme-vscode": "^4.25.2",
    "@uiw/react-codemirror": "^4.25.2",
    "@xyflow/react": "^12.8.6",
    "clsx": "^2.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hotkeys-hook": "^4.6.1",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^3.0.6",
    "tailwind-merge": "2.6.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "10.4.21",
    "postcss": "8.5.6",
    "tailwindcss": "3.4.17",
    "vite": "^7.1.10"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {}
}